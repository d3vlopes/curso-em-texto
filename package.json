{
  "name": "curso-em-texto",
  "version": "0.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "docker": "docker compose -f ./apps/backend/docker-compose.yml up -d",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:staged": "turbo run test:staged",
    "test:ci": "turbo run test:ci",
    "typecheck": "turbo run typecheck"
  },
  "packageManager": "npm@8.5.0",
  "engines": {
    "node": ">=20"
  },
  "devEngines": {
    "packageManager": {
      "name": "npm",
      "onFail": "error"
    },
    "runtime": {
      "name": "node",
      "version": ">=20",
      "onFail": "error"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "lefthook": "^1.12.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  }
}
