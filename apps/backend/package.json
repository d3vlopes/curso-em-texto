{
  "name": "backend",
  "version": "0.0.1",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/app/index.ts",
    "build": "tsup src/app/index.ts --format esm,cjs --dts",
    "start": "node dist/app/index.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:studio": "npx drizzle-kit studio",
    "test": "vitest --run --silent",
    "test:unit": "vitest --watch",
    "test:staged": "vitest related --run",
    "test:ci": "vitest --run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-istanbul": "^3.2.4",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "pg": "^8.16.3",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "fastify": "^5.5.0",
    "zod": "^4.0.17"
  }
}
