{
  "compilerOptions": {
    "target": "ES2022",
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDirs": ["src"],
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@/__tests__/*": ["./src/__tests__/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
